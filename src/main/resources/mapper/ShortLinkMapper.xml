<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cetide.blog.mapper.ShortLinkMapper">
    <!-- 注意：需开启 mapUnderscoreToCamelCase=true 以便下划线字段自动映射为驼峰属性 -->
    <select id="selectByShortUrlAndDomain" resultType="com.cetide.blog.model.entity.ShortLink">
        SELECT *
        FROM short_link
        WHERE domain = #{domain}
          AND short_url = #{shortUrl}
          AND deleted = 0
          AND enabled = 1
        LIMIT 1
    </select>
</mapper>
